{
  "compilerOptions": {
    "target": "ES6",                          // Target ECMAScript version
    "module": "commonjs",                     // Module system used by Node.js
    "strict": true,                           // Enable all strict type checks
    "esModuleInterop": true,                  // Support for CommonJS modules
    "outDir": "./dist",                       // Output directory for compiled files
    "rootDir": "./src",                       // Root directory of TypeScript source files
    "resolveJsonModule": true,                // Support importing JSON files
    "skipLibCheck": true,                     // Skip checking of all declaration files
    "forceConsistentCasingInFileNames": true  // Enforce consistent file name casing
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
